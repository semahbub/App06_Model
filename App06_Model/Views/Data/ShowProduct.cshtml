
@{
    ViewData["Title"] = "ShowProduct";
}

<h2 class="alert alert-info">Show Product</h2>

<h4 class="text-danger">@ViewBag.Err</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowProduct" asp-controller="Data" method="post">
            <label>Id</label>
            <input type="number" id="Id" name="Id" class="form-control abc" value="" />
            <label>Product Name</label>
            <input type="text" name="Name" class="form-control" value="" />
            <label>Measuring Unit</label>
            <input type="text" name="MUnit" class="form-control" value="" />
            <label>Unit Price</label>
            <input type="number" name="UnitPrice" class="form-control" value="" />
            <label>Quantity</label>
            <input type="number" name="Quantity" class="form-control" value="" />
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>